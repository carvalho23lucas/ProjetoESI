<h1> Login </h1>
   <div class="separador2"></div>
   <div class="separador1"></div>
<%= form_for @login, url: {action: "login"} do |f| %>
    <% if @login.errors.any? %>
        <div id="error_explanation">
            <h2> <%= pluralize(@login.errors.count, "erro") %> prohibited this user from being retrieved: </h2>
            <%= @login.errors.full_messages.each do |msg| %>
            <ul>
              <li><%=msg %></li>
            </ul>
            <% end %>
        </div>
    <% end %>
    <div class="itemFormLogin">
        <%= f.label :email, "E-mail:" , :class => 'labelb' %><br>
        <%= f.text_field :email, :class => 'inputb', :required => true %><br>
    </div>
   
    <div class="itemFormLogin">  
        <%= f.label :senha, "Senha: " , :class => 'labelb' %><br>
        <%= f.text_field :senha, :required => true, :class => 'inputb' %>
    </div>
    
    <%= f.submit "Login" , :class => 'buttonForm1' %><br>
    
<% end %>