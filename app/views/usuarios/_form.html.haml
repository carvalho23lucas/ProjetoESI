= form_for @usuario do |f|
  - if @usuario.errors.any?
    #error_explanation
      %h2= "#{pluralize(@usuario.errors.count, "error")} prohibited this usuario from being saved:"
      %ul
        - @usuario.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :documento, @usuario.isPJ ? "CNPJ:" : "CPF:"
    = f.text_field :documento
  .field
    = f.label :nome
    = f.text_field :nome
  .field
    = f.label :email
    = f.email_field :email
  .field
    = f.label :senha
    = f.password_field :senha
  .actions
    = f.submit 'Salvar'
