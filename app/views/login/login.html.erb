<%= form_for @login, url: {action: "login"} do |f| %>
    <% if @login.errors.any? %>
        <div id="error_explanation">
            <h2> <%= pluralize(@login.errors.count, "erro") %> prohibited this user from being retrieved: </h2>
            <%= @login.errors.full_messages.each do |msg| %>
            <ul>
              <li><%=msg %></li>
            </ul>
            <% end %>
        </div>
    <% end %>

    <%= f.label :email, "E-mail:" %><br>
    <%= f.text_field :email, :required => true %><br>
  
    <%= f.label :senha, "Senha: " %><br>
    <%= f.text_field :senha, :required => true %>
  
    <%= f.submit "Login" %><br>
    
<% end %>