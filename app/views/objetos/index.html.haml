- @objetos.each do |objeto|
  .itemObjeto
    .itemObjetoIcone
      -@imagem = "/images/catgs/catg" + objeto.categoria_objeto_id.to_s +  ".png"
      %img{:alt => "Doador Pessoa", :src => @imagem, :width => "90px"}/
    .itemObjetoNome
      %h1
        = objeto.nome
      .h2 
        = objeto.observacoes
    -if $isInstituicao
      %a{:href => edit_objeto_path(@usuario)}    
        .itemObjetoBotao
          .buttonlink
            EXCLUIR
    -else
      %a{:href => new_doacao_path(objeto)}  
        .itemObjetoBotao
          .buttonlink
            DOAR
    .itemObjetoMeta
      %h2
        Instituição
      .h3
        Meta:
        = objeto.meta 
        = " "
        = objeto.unidade_medida
